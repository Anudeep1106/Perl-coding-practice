# Reverse a string without using built in functions

print "enter a string \n";

chomp(my $s=<STDIN>);
@a1 = split (/ /, $s);

$i = @a1-1;
while ($i >= 0)
{
    print "$a1[$i] " ;
    $i--;
}

print "enter a string \n";

chomp(my $s=<STDIN>);
@a1 = split (/ /, $s);

@a2 = reverse(@a1);

print "@a2 \n";
